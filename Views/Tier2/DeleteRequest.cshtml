@model IEnumerable<NetTracApp.Models.InventoryItem>

@{
    ViewData["Title"] = "Delete Request";
}

<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<h2>Delete Request</h2>

<p>The following items have been selected for deletion. Please confirm:</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Vendor</th>
            <th>Serial Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Vendor</td>
                <td>@item.SerialNumber</td>
            </tr>
        }
    </tbody>
</table>

<!-- Form to confirm deletion -->
<form asp-action="ConfirmDeletion" method="post">
    @foreach (var item in Model)
    {
        <input type="hidden" name="selectedItems" value="@item.Id" />
    }
    <button type="submit" class="btn btn-danger">Confirm Deletion</button>
</form>

<a asp-action="Tier2Dashboard" class="btn btn-secondary">Cancel</a>
