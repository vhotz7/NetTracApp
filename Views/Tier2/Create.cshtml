@model NetTracApp.Models.InventoryItem

@{
    ViewData["Title"] = "Create Inventory Item";
}

<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<div class="top-border">
    <!-- background text "NetTrac" -->
    <span class="background-text">NetTrac</span>

    <span id="circle"></span>

    <!-- Centered Text "IT Network Tracker" -->
    <span class="centered-text">Create New Item</span>

    <!-- Home and Login Icons -->
    <span class="icons" style="display: flex; align-items: center; margin-right: 30px;">
        <a href="@Url.Action("Tier2Dashboard", "Tier2")" style="margin-right: 20px; text-decoration: none; color: white;">
            <i class="bi bi-house-door" style="font-size: 2.5rem;"></i>
        </a>
        <a href="@Url.Action("Index", "Login")" style="text-decoration: none; color: white;">
            <i class="bi bi-box-arrow-right" style="font-size: 2.5rem;"></i>
        </a>
    </span>
</div>






<!-- Form to create a new inventory item -->
<form asp-action="Create" asp-controller="Tier2" method="post">
    <div class="form-horizontal">
      
        <!-- Input for vendor -->
        <div class="form-group">
            <label asp-for="Vendor" class="control-label">Vendor</label>
            <input asp-for="Vendor" class="form-control" />
            <span asp-validation-for="Vendor" class="text-danger"></span>
        </div>

        <!-- Input for device type -->
        <div class="form-group">
            <label asp-for="DeviceType" class="control-label">Device Type</label>
            <input asp-for="DeviceType" class="form-control" />
            <span asp-validation-for="DeviceType" class="text-danger"></span>
        </div>

        <!-- Input for serial number -->
        <div class="form-group">
            <label asp-for="SerialNumber" class="control-label">Serial Number</label>
            <input asp-for="SerialNumber" class="form-control" />
            <span asp-validation-for="SerialNumber" class="text-danger"></span>
        </div>

        <!-- Input for host name -->
        <div class="form-group">
            <label asp-for="HostName" class="control-label">Host Name</label>
            <input asp-for="HostName" class="form-control" />
            <span asp-validation-for="HostName" class="text-danger"></span>
        </div>

        <!-- Input for asset tag -->
        <div class="form-group">
            <label asp-for="AssetTag" class="control-label">Asset Tag</label>
            <input asp-for="AssetTag" class="form-control" />
            <span asp-validation-for="AssetTag" class="text-danger"></span>
        </div>

        <!-- Input for part ID -->
        <div class="form-group">
            <label asp-for="PartID" class="control-label">Part ID</label>
            <input asp-for="PartID" class="form-control" />
            <span asp-validation-for="PartID" class="text-danger"></span>
        </div>

        <!-- Input for future location -->
        <div class="form-group">
            <label asp-for="FutureLocation" class="control-label">Future Location</label>
            <input asp-for="FutureLocation" class="form-control" />
            <span asp-validation-for="FutureLocation" class="text-danger"></span>
        </div>

        <!-- Input for date received -->
        <div class="form-group">
            <label asp-for="DateReceived" class="control-label">Date Received</label>
            <input asp-for="DateReceived" class="form-control" type="date" />
            <span asp-validation-for="DateReceived" class="text-danger"></span>
        </div>

        <!-- Input for current location -->
        <div class="form-group">
            <label asp-for="CurrentLocation" class="control-label">Current Location</label>
            <input asp-for="CurrentLocation" class="form-control" />
            <span asp-validation-for="CurrentLocation" class="text-danger"></span>
        </div>

        <!-- Dropdown for status -->
        <div class="form-group">
            <label asp-for="Status" class="control-label">Status</label>
            <select asp-for="Status" class="form-control">
                <option value="Received">Received</option>
                <option value="In Route">In Route</option>
                <option value="Set to Delete">Set to Delete</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>

        <!-- Input for back ordered -->
        <div class="form-group">
            <label asp-for="BackOrdered" class="control-label">Back Ordered</label>
            <input asp-for="BackOrdered" class="form-control" />
            <span asp-validation-for="BackOrdered" class="text-danger"></span>
        </div>

        <!-- Input for notes -->
        <div class="form-group">
            <label asp-for="Notes" class="control-label">Notes</label>
            <textarea asp-for="Notes" class="form-control"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <!-- Input for product description -->
        <div class="form-group">
            <label asp-for="ProductDescription" class="control-label">Product Description</label>
            <input asp-for="ProductDescription" class="form-control" />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <!-- Dropdown for ready -->
        <div class="form-group">
            <label asp-for="Ready" class="control-label">Ready</label>
            <select asp-for="Ready" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <span asp-validation-for="Ready" class="text-danger"></span>
        </div>

        <!-- Checkbox for legacy device -->
        <div class="form-group">
            <label asp-for="LegacyDevice" class="control-label">Legacy Device</label>
            <input asp-for="LegacyDevice" class="form-check-input" type="checkbox" />
            <span asp-validation-for="LegacyDevice" class="text-danger"></span>
        </div>

        <div class="form-group button-group">
            <input type="submit" value="Create" class="btn btn-custom-orange" />
            <a asp-action="Tier2Dashboard" asp-controller="Tier2" class="btn btn-delete">Cancel</a>


        </div>
    </div>
</form>



<div style="margin-top: 15px; text-align: right;">
    <p style="font-weight: bold; color: #333;">
        Signed in as:T2 <span style="color: #8B0000;">@ViewBag.UserType </span>
    </p>
</div>
