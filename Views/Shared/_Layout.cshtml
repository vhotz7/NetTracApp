



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NetTracApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/NetTracApp.styles.css" asp-append-version="true" />
</head>


<body>
    <div class="top-border" style="background-color: #970000; color: #ffff00; height: 80px; border-radius: 8px; margin: 20px auto; padding-left: 20px; display: flex; align-items: center; position: relative; max-width: 100%; width: 1320px;">
        <!-- Left Side: Static Circle and Background Text -->
        <span class="background-text" style="font-size: 70px; font-family: Impact;">NetTrac</span>

        <span id="circle" style="background: black; border-radius: 50%; width: 75px; height: 75px; position: absolute; left: 10px; top: 50%; transform: translateY(-50%);"></span>

        <!-- Centered Text: Changes Based on View -->
        <span class="centered-text" style="margin: 0 auto; font-size: 45px; font-family: Impact; color: #ffffff;">
            @ViewData["CenteredText"]
        </span>

        <!-- Right Side: Home and Logout Buttons -->
        <div class="icons"
             style="display: flex; align-items: center; gap: 15px; margin-right: 30px;">

            <!-- Home Button -->
            <a href="@ViewData["HomeLink"]"
               style="text-decoration: none; color: white; display: flex; align-items: center;">
                <i class="bi bi-house-door" style="font-size: 2rem;"></i>
            </a>

            <!-- Logout Button -->
            <a href="@Url.Action("LogoutViaLink", "Login")"
               style="display: flex; align-items: center; text-decoration: none; color: white;">
                <i class="bi bi-box-arrow-right" style="font-size: 2rem;"></i>
            </a>

        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NetTracApp - <a asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
