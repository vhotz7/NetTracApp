
    @{
    ViewData["Title"] = "Login Page";
    ViewData["CenteredText"] = "Login";
    ViewData["HomeLink"] = Url.Action("Login", "Home");
    }


<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<form method="post" action="/Login/Login" class="login-form">
    <div class="form-group">
        <label for="username">Username: </label>
        <input type="text" id="username" name="username" required>
    </div>

    <div class="form-group">
        <label for="password">Password: </label>
        <input type="password" id="password" name="password" required>
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-custom-orange">
    </div>

</form>

@if (ViewBag.Message != null)
{
<p style="color:red;">@ViewBag.Message</p>
}

