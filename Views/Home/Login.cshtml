@{
    ViewData["Title"] = "Login Page";
    ViewData["CenteredText"] = "Login";
    ViewData["HomeLink"] = Url.Action("Login", "Home");
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<form method="post" action="/Login/Login" class="login-form">
    <div class="form-group">
        <label for="username">Username: </label>
        <input type="text" id="username" name="username" required>
    </div>

    <div class="form-group">
        <label for="password">Password: </label>
        <input type="password" id="password" name="password" required>
    </div>

    <div class="form-group">
        <input type="submit" value="Login" class="btn btn-custom-orange">
    </div>

    <!-- Display error message under the form if credentials are incorrect -->
    @if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert" style="margin-top: 10px;">
            @ViewBag.Message
        </div>
    }
</form>
