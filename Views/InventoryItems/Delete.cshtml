@model NetTracApp.Models.InventoryItem

@{
    ViewData["Title"] = "Delete Inventory Item";
}

<style>
    /* Top border styling */
    .top-border {
        position: relative;
        background-color: #970000; /* Dark red background color */
        color: #ffff00; /* Yellow text color */
        height: 60px; /* Adjust height as needed */
        display: flex;
        align-items: center;
        padding-left: 20px; /* Space for the left side text */
    }

    /* Styling for the background text "NetTrac" */
    .background-text {
        position: absolute;
        left: 20px; /* Position text near the left */
        top: 50%; /* Center vertically */
        transform: translateY(-50%); /* Center the text vertically */
        font-size: 50px; /* Adjust font size */
        font-weight: bold; /* Bold text */
        z-index: 1; /* Ensure it appears above the background */
        color: #ffff00; /* Yellow text color */
    }

    /* Styling for the centered text "IT Network Tracker" */
    .centered-text {
        margin: 0 auto; /* Center horizontally */
        font-size: 20px; /* Adjust font size */
        font-weight: bold; /* Bold text */
        color: #ffffff; /* White text color */
        z-index: 2; /* Ensure it appears on top */
        position: relative;
    }

    /* Custom style for orange button */
    .btn-custom-orange {
        background-color: #ac3e0b; /* Orange color */
        color: white;
        border: none;
    }

        .btn-custom-orange:hover {
            background-color: #8a2e0a; /* Darker orange on hover */
        }

    /* Ensure footer or buttons do not cut off */
    .container {
        padding-bottom: 70px; /* Prevent content from being cut off */
    }

    /* Style adjustments for form container to ensure it doesn't cut off */
    .form-horizontal {
        padding-bottom: 70px; /* Extra padding at the bottom */
    }
</style>

<div class="top-border">
    <!-- Background Text "NetTrac" -->
    <span class="background-text">NetTrac</span>

    <!-- Centered Text "IT Network Tracker" -->
    <span class="centered-text">Delete</span>
</div>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Inventory Item</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Vendor</dt>
        <dd class="col-sm-10">@Model.Vendor</dd>
        <dt class="col-sm-2">Device Type</dt>
        <dd class="col-sm-10">@Model.DeviceType</dd>
        <dt class="col-sm-2">Serial Number</dt>
        <dd class="col-sm-10">@Model.SerialNumber</dd>
        <dt class="col-sm-2">Host Name</dt>
        <dd class="col-sm-10">@Model.HostName</dd>
        <dt class="col-sm-2">Asset Tag</dt>
        <dd class="col-sm-10">@Model.AssetTag</dd>
        <dt class="col-sm-2">Part ID</dt>
        <dd class="col-sm-10">@Model.PartID</dd>
        <dt class="col-sm-2">Future Location</dt>
        <dd class="col-sm-10">@Model.FutureLocation</dd>
        <dt class="col-sm-2">Date Received</dt>
        <dd class="col-sm-10">@Model.DateReceived</dd>
        <dt class="col-sm-2">Current Location</dt>
        <dd class="col-sm-10">@Model.CurrentLocation</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
