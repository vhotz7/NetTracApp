@model IEnumerable<NetTracApp.Models.InventoryItem>

<h2>Inventory List</h2>

<form asp-action="Index">
    <p>
        Find by Vendor or Serial Number: <input type="text" name="searchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Vendor</th>
            <th>Device Type</th>
            <th>Serial Number</th>
            <th>Host Name</th>
            <th>Current Location</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Vendor</td>
                <td>@item.DeviceType</td>
                <td>@item.SerialNumber</td>
                <td>@item.HostName</td>
                <td>@item.CurrentLocation</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Create New Inventory Item</a>

<hr />

<!-- CSV Upload Form -->
<h3>Upload CSV File</h3>

<form asp-action="UploadCsv" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Select CSV File:</label>
        <input type="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
