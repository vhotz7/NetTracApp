@model NetTracApp.Models.InventoryItem

<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<!-- Header -->
<div class="top-border">
    <span class="background-text">NetTrac</span>

    <span id="circle"></span>

    <span class="centered-text">
        Delete from Inventory
    </span>

    <span class="icons" style="display: flex; align-items: center; margin-right: 30px;">
        <a href="@Url.Action("Tier3Dashboard", "Tier3")"
           style="margin-right: 20px; text-decoration: none; color: white;">
            <i class="bi bi-house-door" style="font-size: 2.5rem;"></i>
        </a>
        <a href="@Url.Action("Index", "Login")"
           style="text-decoration: none; color: white;">
            <i class="bi bi-box-arrow-right" style="font-size: 2.5rem;"></i>
        </a>
    </span>
</div>



<!-- Delete Confirmation -->
<div class="delete-warning">
    Are you sure you want to delete this Inventory Item?
</div>


<!-- Inventory Item Table -->
<table class="table-bordered">
    <tr>
        <th>Vendor</th>
        <td>@Model.Vendor</td>
    </tr>
    <tr>
        <th>Device Type</th>
        <td>@Model.DeviceType</td>
    </tr>
    <tr>
        <th>Serial Number</th>
        <td>@Model.SerialNumber</td>
    </tr>

 
</table>
<div class="button-container">
    <form asp-action="Delete" method="post" style="display: inline-block; margin: 0;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SerialNumber" />
        <button type="submit" class="btn btn-delete">Yes</button>
    </form>
    <a asp-action="Tier3Dashboard" class="btn btn-custom-orange" style="margin-left: 5px;">No</a>
</div>


<div style="margin-top: 15px; text-align: right;">
    <p style="font-weight: bold; color: #333;">
        Signed in as: T3 <span style="color: #8B0000;">@ViewBag.UserType </span>
    </p>
</div>
