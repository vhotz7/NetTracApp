@model NetTracApp.Models.InventoryItem




@{
    ViewData["Title"] = "Delete";
    ViewData["CenteredText"] = "Delete";
    ViewData["HomeLink"] = Url.Action("Tier3Dashboard", "Tier3");
}

<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>






<!-- Delete Confirmation -->
<div class="delete-warning">
    Are you sure you want to delete this Inventory Item?
</div>


<!-- Inventory Item Table -->
<table class="table-bordered">
    <tr>
        <th>Vendor</th>
        <td>@Model.Vendor</td>
    </tr>
    <tr>
        <th>Device Type</th>
        <td>@Model.DeviceType</td>
    </tr>
    <tr>
        <th>Serial Number</th>
        <td>@Model.SerialNumber</td>
    </tr>

 
</table>
<div class="button-container">
    <form asp-action="Delete" method="post" style="display: inline-block; margin: 0;">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="SerialNumber" />
        <button type="submit" class="btn btn-delete">Yes</button>
    </form>
    <a asp-action="Tier3Dashboard" class="btn btn-custom-orange" style="margin-left: 5px;">No</a>
</div>


<div style="margin-top: 15px; text-align: right;">
    <p style="font-weight: bold; color: #333;">
        Signed in as: T3 <span style="color: #8B0000;">@ViewBag.UserType </span>
    </p>
</div>


<style>
    /* Ensure the table and button container align properly */
    .table-bordered {
        width: 50%;
        margin: 20px auto; /* Center the table horizontally */
        border-collapse: collapse;
    }

        .table-bordered th, .table-bordered td {
            padding: 10px;
            border: 1px solid #ddd;
        }

    .delete-warning {
        text-align: center;
        margin-bottom: 10px;
    }

    /* Button container styles to align below the table */
    .button-container {
        width: 50%; /* Match the width of the table */
        margin: 20px auto; /* Center the button container horizontally */
        display: flex;
        justify-content: center; /* Center buttons horizontally */
        align-items: center; /* Align items vertically */
        gap: 5px; /* Ensure minimal space between buttons */
    }

    /* Ensure buttons do not have extra space around them */
    .inline-form,
    .btn-custom-orange {
        display: inline-block;
        margin: 0; /* Remove extra margins */
    }

    /* Button styling */
    .btn {
        padding: 10px 15px;
        font-size: 16px;
        border: none;
        cursor: pointer;
    }

    .btn-delete {
        border-radius: 5px;
    }

    .btn-custom-orange {
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
    }
</style>