@model IEnumerable<NetTracApp.Models.InventoryItem>



<h2>Pending Deletion Requests</h2>

@if (!Model.Any())
{
    <p>No pending deletion requests at this time.</p>
}
else
{
    <div class="mb-3">
        <form asp-action="ApproveAllDeletions" method="post" style="display:inline;">
            <button type="submit" class="btn-custom-orange">Approve All</button>
        </form>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Vendor</th>
                    <th>Device Type</th>
                    <th>Serial Number</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Vendor</td>
                        <td>@item.DeviceType</td>
                        <td>@item.SerialNumber</td>
                        <td style="text-align: center;">
                            <form asp-action="ApproveDeletion" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn-custom-orange">Approve</button>
                            </form>

                            <form asp-action="DenyDeletion" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn-delete ">Deny</button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   
}
