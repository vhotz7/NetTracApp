@model IEnumerable<NetTracApp.Models.InventoryItem>

<head>
    <!-- Site-wide custom styles (site.css) -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>


<div class="top-border">
    <span class="background-text">NetTrac</span>
    <span id="circle"></span>
    <span class="centered-text">Pending Deletions</span>
    <span class="icons" style="display: flex; align-items: center; margin-right: 30px;">
        <a href="@Url.Action("Tier3Dashboard", "Tier3")" style="margin-right: 20px; text-decoration: none; color: white;">
            <i class="bi bi-house-door" style="font-size: 2.5rem;"></i>
        </a>
        <a href="@Url.Action("Index", "Login")" style="text-decoration: none; color: white;">
            <i class="bi bi-box-arrow-right" style="font-size: 2.5rem;"></i>
        </a>
    </span>
</div>

@if (!Model.Any())
{
    <p>No pending deletion requests at this time.</p>
}
else
{
    <div class="mb-3">
        <form asp-action="ApproveAllDeletions" method="post" style="display:inline;">
            <button type="submit" class="btn btn-custom-orange">Approve All</button>
        </form>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Vendor</th>
                    <th>Device Type</th>
                    <th>Serial Number</th>
                    <th style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Vendor</td>
                        <td>@item.DeviceType</td>
                        <td>@item.SerialNumber</td>
                        <td style="text-align: center;">
                            <form asp-action="ApproveDeletion" method="post" style="display:inline;">
                                <input type="hidden" name="serialNumber" value="@item.SerialNumber" />
                                <button type="submit" class="btn btn-custom-orange">Approve</button>
                            </form>

                            <form asp-action="DenyDeletion" method="post" style="display:inline;">
                                <input type="hidden" name="serialNumber" value="@item.SerialNumber" />
                                <button type="submit" class="btn btn-delete">Deny</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


<div style="margin-top: 15px; text-align: right;">
    <p style="font-weight: bold; color: #333;">
        Signed in as: T3 <span style="color: #8B0000;">@ViewBag.UserType </span>
    </p>
</div>
